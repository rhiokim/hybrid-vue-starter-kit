@import '../base/all'

.modal-mask
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(50, 50, 50, .8)
  display table
  transition opacity .3s ease

.modal-wrapper
  display table-cell
  vertical-align middle

.modal-container
  width 55%
  margin 0px auto
  padding 40px 53px
  background-color #fff
  border-radius 5px
  box-shadow 0 2px 8px rgba(0, 0, 0, .33)
  transition all .3s ease

