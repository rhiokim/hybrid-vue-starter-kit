.no-margin {
  margin: 0
}
.no-padding {
  padding: 0
}

/* table, row, cell */
.row
  display table
  width 100%
.cell
  display table-cell
  vertical-align middle
  &.w10
    width 100%
  &.w9
    width 90%
  &.w8
    width 80%
  &.w7
    width 70%
  &.w6
    width 60%
  &.w5
    width 50%
  &.w4
    width 40%
  &.w3
    width 30%
  &.w2
    width 20%
  &.w1
    width 10%

/* border */
.border-1
  border 1px solid $color_gray_a10
.border-top
  border-top 1px solid $color_gray_a30
.border-bottom
  border-bottom 1px solid $color_gray_a30
.border-left
  border-bottom 1px solid $color_gray_a30
.border-right
  border-right 1px solid $color_gray_a30

/* vertical align */
.vtop
  vertical-align top
.vbottom
  vertical-align bottom

