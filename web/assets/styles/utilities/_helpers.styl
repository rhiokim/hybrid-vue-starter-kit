@import '../base/all'

.pull-right
  float right
.pull-left
  float left
.clear
  clear both

/* text with arrange */
.text-right
  text-align right
.text-left
  text-align left
.text-center
  text-align center

/* text with color */
.text-muted
  color $color_black_a50
.text-triple
  color $color_primary
.text-default
  color $color_default
.text-primary
  color $color_primary
.text-warn
  color $color_warn
.text-info
  color $color_info
.text-success
  color $color_success
.text-purple
  color $color_purple

/* text with weight */
.text-bold
  font-weight 600
.text-help
  font-size 10px

/* list */
.no-style {
  list-style none
}

/* background color */
.bg-white
  background-color $color_white
.bg-primary
  background-color $color_primary
.bg-warn
  background-color $color_warn
.bg-info
  background-color $color_info
.bg-success
  background-color $color_success
.bg-purple
  background-color $color_purple

