@import '../base/_variables'

table, td, th
  border 1px solid #ddd
  text-align left

table
  border-collapse collapse
  width 100%

th, td
  padding 5px

tr
  &:hover
    background-color #f5f5f5

tr
  &:nth-child(even)
    background-color #f2f2f2

